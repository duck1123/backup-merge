#!/usr/bin/env bb
;; *- mode: clojure -*-

(require '[babashka.deps :as deps])

(deps/add-deps
 '{:deps {io.github.l3nz/cli-matic      {:sha "ddbcad077ba63e0abb3597a7ec6f62c40f91c9e5"}}})

(require '[cli-matic.core :as cli :refer [run-cmd]])
(require '[backup-merge.core :as bm])

(def CONFIGURATION
  {:app {:command "bm"
         :description "Backup merges"
         :version "0.0.1"}
   :global-opts []
   :commands
   [{:command "build"
     :short "b"
     :runs bm/-main}]
   })


(run-cmd *command-line-args* CONFIGURATION)
